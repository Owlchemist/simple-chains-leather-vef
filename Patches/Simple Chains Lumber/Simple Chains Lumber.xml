		<mods>
			<li>Simple Chains: Lumber</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<!-- add the new hides -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/RecipeDef[defName="Owl_MakeTanningLiquorFromWood"]/ingredients/li[1]/filter/thingDefs/li[1] |
						Defs/RecipeDef[defName="Owl_MakeTanningLiquorFromWood"]/fixedIngredientFilter/thingDefs/li[1]</xpath>
					<value>
						<li>Owl_WoodLog</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
